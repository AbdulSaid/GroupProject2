<section class="login-block">
  <div class="container">
    <div class="containerLogin">
      <div class="row">
        <div class="col-md-12 login-sec">
          <h2 class="text-center">Join our Network</h2>
          <form class="login-form">
            <div class="form-group">
              <label for="name" class="text-uppercase">Company Name</label>
              <input id="companyName" type="text" class="form-control" placeholder="Smitherson's Catering">

            </div>
            <div class="form-group">
              <label for="name" class="text-uppercase">Contact Name</label>
              <input id="contactName" type="text" class="form-control" placeholder="John Smith">

            </div>
            <div class="form-group">
              <label for="exampleInputEmail1" class="text-uppercase">User Name</label>
              <input id="userName" type="text" class="form-control" placeholder="johnsmith123">

            </div>
            <div class="form-group">
              <label for="exampleInputEmail1" class="text-uppercase">Company Address</label>
              <input id="userAddress" type="text" class="form-control" placeholder="42 Wallaby Way, Sydney">

            </div>
